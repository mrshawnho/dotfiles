// 将设置放入此文件中以覆盖默认设置
{
    "editor.fontFamily": "'DejaVuSansMonoForPowerline NF', 'DejaVuSansMonoForPowerline Nerd Font', Consolas",
    "editor.fontSize": 13,
    "editor.tabSize": 2,
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.easymotion": true,
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<esc>"
            ]
        },
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<esc>"
            ]
        },
        {
            "before": [
                "k",
                "k"
            ],
            "after": [
                "<esc>"
            ]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": [
                "0"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        },
        {
            "before": [
                "<space>"
            ],
            "after": [
                ":"
            ]
        },
        {
            "before": [
                "<leader>",
                "o"
            ],
            "after": [
                "o",
                "<esc>"
            ]
        },
        {
            "before": [
                "<leader>",
                "O"
            ],
            "after": [
                "O",
                "<esc>"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":w!"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "q"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":q"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "n"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":nohlsearch"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "r",
                "n"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":set relativenumber!"
                }
            ]
        }
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-b>": false,
        "<C-c>": false,
        "<C-e>": false,
        "<C-f>": false,
        "<C-g>": false,
        "<C-h>": false,
        "<C-i>": false,
        "<C-m>": false,
        "<C-n>": false,
        "<C-o>": false,
        "<C-p>": false,
        "<C-q>": false,
        "<C-s>": false,
        "<C-t>": false,
        "<C-v>": false,
        "<C-w>": false,
        "<C-x>": false,
        "<C-y>": false
    }
}

